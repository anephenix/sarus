# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf

# Unix-style newlines with a newline ending every file
[{src,__tests__}/**.ts]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 80

[package.json]
indent_style = space
indent_size = 2

[jest.config.js]
indent_style = tab
